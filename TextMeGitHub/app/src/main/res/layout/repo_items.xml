<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">


    <TextView
        android:text="title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:textColor="#4078c0"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/title" />

    <TextView
        android:text="desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginBottom="5dp"
        android:id="@+id/desc" />

    <TextView
        android:text="fork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fork"
        android:drawableLeft="@drawable/ic_fork"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:layout_alignBaseline="@+id/title"
        android:layout_alignBottom="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="stag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stagazers"
        android:drawableLeft="@drawable/ic_star"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_alignBaseline="@+id/title"
        android:layout_alignBottom="@+id/title"
        android:layout_toLeftOf="@+id/fork"
        android:layout_toStartOf="@+id/fork"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updated"
        android:textColor="#A9A9A9"
        android:layout_below="@+id/desc"
        android:layout_alignLeft="@+id/desc"
        android:layout_alignStart="@+id/desc" />

    <TextView
        android:text="lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/language"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_alignBaseline="@+id/updated"
        android:layout_alignBottom="@+id/updated"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:id="@+id/view"
        android:layout_below="@+id/updated"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
