<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contrib_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contrib_pic"
        android:layout_marginTop="5dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/contrib_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/contrib_pic"
        android:layout_toRightOf="@+id/contrib_pic"
        android:layout_weight="1"
        android:text="name"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contrib_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contrib_name"
        android:layout_alignStart="@+id/contrib_name"
        android:layout_below="@+id/contrib_name"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:text="login"
        android:textColor="#808080"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/contrib_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contrib_login"
        android:layout_alignStart="@+id/contrib_login"
        android:layout_below="@+id/contrib_login"
        android:layout_marginTop="3dp"
        android:text="link"
        android:textColor="#4078c0"
        android:textSize="16sp" />
</RelativeLayout>
